{
  "extends": [
    "stylelint-config-recommended-scss"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "block-no-empty": [
      true,
      {
        "severity": "warning",
        "message": "Delete empty block, or add comment if intentional"
      }
    ],
    "color-hex-case": [
      "lower",
      {
        "severity": "warning"
      }
    ]
  }
}
